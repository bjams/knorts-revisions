  .afterpay-logo {
    width: 5.5em !important;
    height: auto !important;
  }

  afterpay-placement {
    margin: 0;
    display: block !important;
  }

  .afterpay-paragraph {
    font-size: 12px !important;
  }

  .afterpay-placement * {
    font-size: 12px !important;
  }

  #shopify-section-cart-template .afterpay-paragraph {}

