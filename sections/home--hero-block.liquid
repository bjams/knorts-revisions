{% comment %} 1 {% endcomment %}
<div class="hero--block--one block--image-banner" style="background: url('{{ template.settings.section_image | img_url }}'); background-size: cover;">
  <div class="row-wrapper">
    <div class="content-wrapper">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_description }}</p>
      <a href="{{ section.settings.section__link }}" title="{{ section.settings.section_title }}">
        {{ 'Shop' | escape }}
      </a>
    </div>
  </div>
</div>

