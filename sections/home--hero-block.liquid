{% comment %} 1 {% endcomment %}
<div class="hero--block--one block--image-banner" style="background: url('{{ template.settings.section_image | img_url }}'); background-size: cover;">
  <div class="row-wrapper">
    <div class="content-wrapper">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_description }}</p>
      <a href="{{ section.settings.section__link }}" title="{{ section.settings.section_title }}">
        {{ 'Shop' | escape }}
      </a>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Hero Block",
    "tag": "section",
    "class": "section",
    "max_blocks": 3,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Denim done different",
        "label": "Headline"
      }, {
        "type": "text",
        "id": "section_description",
        "label": "Sub-headline"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      }, {
        "type": "url",
        "id": "url",
        "label": "URL",
        "info": "Select a destination for the Call To Action"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Hero Block",
        "category": "Custom"
      }
    ]
  }
{% endschema %}