{% schema %}
  {
    "name": "Hero",
    "class": "home--hero--block",
    "settings": [],
    "blocks": [
      {
        "name": "Hero Block",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "section_description",
            "label": "Text"
          }, {
            "type": "text",
            "id": "section_title",
            "label": "Title"
          }, {
            "type": "page",
            "id": "page",
            "label": "Page"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}