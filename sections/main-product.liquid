<script>history.scrollRestoration = "manual"</script>

<script>
   window.addEventListener("load",  function(event) {
    var windowWidth = window.innerWidth; 
    if (windowWidth < 775) {
        const fakeFieldSets = document.querySelector('#fake-fieldsets'); 
        const colorHolder = document.querySelector('#color-holder'); 
        const rad = document.querySelectorAll('input[name="Color"]');
        const colorText = document.querySelector('#selected-color');
        const recommendations = document.querySelector('product-recommendations');
        const recommendationHolder = document.querySelector('#recommendation-holder'); 
        const footer = document.querySelector('footer'); 
        if (colorHolder && fakeFieldSets) colorHolder.appendChild(fakeFieldSets);
        if (recommendationHolder && recommendations) recommendationHolder.appendChild(recommendations);
        if (recommendationHolder && footer) recommendationHolder.parentElement.appendChild(footer);
        const ulRec = recommendations.querySelector("ul");
        if (ulRec) ulRec.style.cssText = "overflow: auto;flex-wrap: nowrap;gap: 25px;";
        const firstSect = document.querySelector('#first-section'); 
        const body = document.querySelector('body'); 
        firstSect.addEventListener('scroll', (e) => {
            const maxScrollBottom = firstSect.scrollHeight - firstSect.clientHeight - 100;
            if (maxScrollBottom <= e.target.scrollTop) {
                body.classList.add("forceOverflow");
            } else {
                body.classList.remove("forceOverflow");
                // body.scrollIntoView({behavior: "smooth", block: "start"});
            }
        }) 
        document.addEventListener('scroll', (e) => {
            if (window.scrollY > 0) {
                firstSect.style.overflow = 'hidden';
            } else {
                firstSect.style.overflow = null;
            }
        }) 
        var prev = null;
        if (!rad || !rad.length) {
            colorText.parentElement.remove();
            const firstSize = document.querySelector('label[for="{{ section.id }}-1-0"]');
            if (firstSize) firstSize.click();
        }
        for (var i = 0; i < rad.length; i++) {
            rad[i].addEventListener('change', function () {
                (prev) ? console.log(prev.value) : null;
                if (this !== prev) {
                    prev = this;
                }
                colorText.innerHTML = this.value;
                console.log(this.value)  
            });
            if (i===rad.length-1) {
              console.log('-------section------', '{{ section.id }}__main-1-0'); 
              const firstSize = document.querySelector('label[for="{{ section.id }}-1-0"]');
              if (firstSize) firstSize.click();
              const firstColor = document.querySelector(`label[for="{{ section.id }}-2-0"]`);
              const fakeColor = document.querySelector(`label[for="fake-{{ section.id }}-2-0"]`);
              if (firstColor && fakeColor) {
                fakeColor.click();
                colorText.innerHTML = fakeColor?.previousElementSibling?.value;
              }
          }
        }
        const afterpay = document.querySelector('afterpay-placement');
        const productParent = document.querySelector('product-form');
        productParent.parentElement.insertAdjacentElement('afterEnd', afterpay );
    } else {
        const toHide = document.querySelectorAll('.hideOnDesktop');
        for (let index = 0; index < toHide.length; index++) {
            toHide[index].remove();
        }
        const firstSize = document.querySelector('label[for="{{ section.id }}-1-0"]');
        if (firstSize) firstSize.click();
        const firstColor = document.querySelector(`label[for="{{ section.id }}-2-0"]`);
        if (firstColor) firstColor.click();
          
        const afterpay = document.querySelector('afterpay-placement');
        const buyButton = document.querySelector('.buy-button-holder');
        console.log('------- afterpay ------', afterpay); 
        console.log('------- buyButton ------', buyButton); 
        buyButton.parentNode.insertBefore(afterpay, buyButton.nextSibling);
         const interval = setInterval(() => {
            const recommended = document.querySelector('product-recommendations');
            if (!recommended.innerHTML.match(/^\s+$/g)) {
              const elem = recommended.querySelector('.grid__item:first-child');
              const dupNode = elem?.cloneNode(true);  
              dupNode?.classList.add("custom-recommended");
              const recomandedholder = document.querySelector('#recommended-holder');
              console.log('-------recomandedholder------', recomandedholder);   
              if (dupNode) recomandedholder.appendChild(dupNode);
              else {
                recomandedholder.classList.add("hideOnDesktop"); 
              }
              clearInterval(interval) 
            }
        }, 150);
    }
    {% assign windowWidth = windowWidth %}
  });
</script> 

